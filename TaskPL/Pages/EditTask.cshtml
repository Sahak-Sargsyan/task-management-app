@page "{id:int}"
@model TaskPL.Pages.EditTaskModel
@{
}

<main class="container">

    <form method="post">
        <input type="hidden" asp-for="Task.Id" />
        <div>
            <label asp-for="Task.Title"></label>
            <input asp-for="Task.Title" required class="form-control add-todo-input" placeholder="Add a title..." />
            <span asp-validation-for="Task.Title" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Task.Description"></label>
            <textarea asp-for="Task.Description" class="form-control add-todo-input" placeholder="Add a description..."></textarea>
            <span asp-validation-for="Task.Description" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Task.DueDate"></label>
            <input asp-for="Task.DueDate" required type="date" class="form-control add-todo-input" />
            <span asp-validation-for="Task.DueDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-4 submit-todo-btn">Save</button>
    </form>

</main>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    main {
        padding-top: 50px;
        min-height: 61vh;
    }

    .add-todo-input {
        max-width: 700px;
    }
</style>