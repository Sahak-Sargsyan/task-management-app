@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<main class="container">

    <div class="header-cont">
        <dir class="current-tasks-text">
            Your current tasks
        </dir>
        @if (Model.isUserLoggedIn)
        {
            <div class="add-task">
                <a class="btn btn-warning add-task-btn" asp-page="/AddTask">Add Task</a>
            </div>
        }
    </div>

    <ul class="todo-list">

        <li class="todo-item headings-item">
            <span class="title bold">Title</span>
            <span class="description bold">Description</span>
            <span class="date bold text-dark">Due date</span>
            <span class="actions bold">Actions</span>
        </li>
        @if (Model.isUserLoggedIn)
        {
            @foreach (var task in Model.Tasks)
            {
                <li class="todo-item">
                    <!-- <input type="checkbox" ${todo.isCompleted ? 'checked' : ''}/> -->
                    <span class="title">@task.Title</span>
                    <span class="description">@task.Description</span>
                    <span class="date">@task.DueDate</span>
                    <form class="actions" method="post" asp-page-handler="Delete" asp-route-taskId="@task.Id" style="display:inline;">
                        <a class="btn btn-primary" asp-page="/EditTask" asp-route-id="@task.Id">Edit</a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </li>
            }
        }
        else
        {
            <p class="text-center mt-4 text-secondary">Please Log In to review your Tasks</p>
        }

    </ul>

</main>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    main {
        padding-top: 50px;
        min-height: 61vh;
    }

    .header-cont {
        display: flex;
        align-items: center;
    }

    .current-tasks-text {
        color: #555;
        font-size: 20px;
        letter-spacing: 1px;
        text-align: start;
        margin-bottom: 10px;
        flex: 1;
    }

    .add-task-btn {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .todo-list {
        background: #fff;
        display: flex;
        flex-direction: column;
        list-style: none;
        gap: 10px;
        padding: 10px 0;
    }

    .todo-item {
        background: #e3f2fd;
        padding: 10px 15px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        flex-wrap: wrap;
        gap: 40px;
        min-width: 360px;
    }

        .todo-item:hover {
            background: #cce1ee;
        }

    .headings-item:hover {
        background: #e3f2fd;
    }

    .title {
        width: 100px;
        max-width: 250px;
        min-width: 100px;
        font-weight: bold;
        word-break: break-all;
    }

    .date {
        color: #666;
        width: 100px;
        min-width: 100px;
        max-width: 200px;
    }

    .actions {
        min-width: 140px;
    }

    .description {
        overflow: auto;
        width: 100px;
        min-width: 200px;
        flex: 1;
    }

    .bold {
        font-weight: bold;
    }

    @@media only screen and (max-width: 800px) {
        .headings-item {
            display: none;
        }
        .title{
            min-width: 320px;
        }
    }
</style>
